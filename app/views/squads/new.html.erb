<%= form_for @squad do |f| %>
  <% if @squad.errors.messages.any? %>
    <%= "#{pluralize(@squad.errors.messages.count, "error")} preventing suqad to be saved!" %>
    
    <% @squad.errors.full_messages.each do |msg| %>
    <%= msg %>
    <% end %>
  <% end %>
  
  <%= f.label :name %>
  <%= f.text_field :name %>
  
  <%= f.label :formation %>
  <%= f.text_field :formation %>
  
  <%= f.hidden_field :slot1_player_id, value: "1" %>
  <%= f.hidden_field :slot2_player_id, value: "0" %>
  <%= f.hidden_field :slot3_player_id, value: "0" %>
  <%= f.hidden_field :slot4_player_id, value: "0" %>
    
  <%= f.submit %>
  
  
<% end %>

<%= render 'formation' %>
